<%- include('./partials/header.ejs'); -%>

  <section class="section center">
    <div class="container">
      <div class="row">
        <div class="col s12 m3">
          <p>Name: <%=user.name%></p>
        </div>
        <div class="col s12 m3">
          <p>Score: <%=user.score%></p>
        </div>
        <div class="col s12 m3">
          <p>Hints: <%=user.hints%></p>
        </div>
        <div class="col s12 m3">
          <p>Skips: <%=user.skips%></p>
        </div>

      </div>
      <h4><%= message %></h4>
      <br>
      <div class="row">
        <%if(games.length>0){%>
          <%for(var i=0; i< games.length; i++){%>
            <div class="col s12 m4">
              <div style="border-radius: 2rem;" class="game-card card-panel hover">
                <i class="material-icons large ">announcement</i>
                <h4><%= games[i].title %></h4>
                <p style="color: black;"><%= games[i].description %></p>
                <% for(var j=0;j< user.quesIndexInfo.length; j++){ %>
                  <%if(user.quesIndexInfo[j].gameID==games[i]._id){%>
                    <p style="color: black;"> <%=user.quesIndexInfo[j].quesIndex%>/30</p>
                  <%}%>
                <%}%>
                
                <br>
                <p class="amber-text darken-3-text">Starts At: <%= new Date(games[i].startTime).toLocaleTimeString()%> <span>on <%=new Date(games[i].startTime).toLocaleDateString() %></span> </p>
                <p class="amber-text darken-3-text">Ends At: <%= new Date(games[i].endTime).toLocaleTimeString()%> <span>on <%=new Date(games[i].endTime).toLocaleDateString() %></span> </p>
                <a class="bttn" href="/game/start/<%= games[i]._id %>">Play Now</a>
              </div>
            </div>
            <%}%>
        <%}else{%>
          <h5>There are no game at this moment.</h5>
        <%}%>
        
            
          </div>
        </div>
      </section>
    </body>
    </html>