<%- include('./partials/header.ejs'); -%>
<link rel="stylesheet" type="text/css" href="/loginregisterstyle.css">

<div class="container">
	<div class="card">
		<div class="row">
			<h4 class="regLog center-align">Change TT User ID</h4>
		</div>
		<div class="card-content white">
			<form action="/auth/changeUID" method="POST">
				<p>You can avail prizes only if you have a valid user ID, validity of which will be checked at the time of declaration of winners. <span><a href="https://techtatva.in/" target="_blank">Click here</a></span> to register if you haven't already.</p>
				<p> <%= message%></p>
				<div class="inputs">
					<div class="input">
						<input placeholder="New User ID" name="UID" type="number" required>
					</div>
				</div>
				<button class="bttn" type="submit">Change</button>
			</form>
		</div>
	</div>
</div>