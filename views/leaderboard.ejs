<%- include('./partials/header.ejs'); -%>
<div class="container">
    <br>
    <br>
    <table class="highlight centered ">
      <thead>
        <tr class="amber-text text-darken-3">
          <th>Rank</th>
          <th>Name</th>
          <th>TT User ID</th>
          <th>Score</th>
          <th>Time(sec)</th>
        </tr>
      </thead>

      <tbody class="white-text">
        <%for(let i=0;i< users.length; i++ ){%>
          <tr>
            <td><%=ranks[i]%></td>
            <td><%=users[i].name%></td>
            <td><%=users[i].regno%></td>
            <td><%=users[i].score%></td>
            <td><%=(users[i].timeTaken/10)%></td>
          </tr>
        <%}%>
        
        
      </tbody>
    </table>
    <br>
    <br>
    <ul class="pagination center-align">
      <%if(currentPage>1){%>
      <li class="waves-effect active amber darken-3 white-text"><a href="/home/leaderboard?page=<%=currentPage-1%>"><i class="material-icons">chevron_left</i></a></li>
      <%}%>
      <%if(currentPage!=1){%>
      <li class="waves-effect active amber darken-3 white-text"><a href="/home/leaderboard?page=1">1</a></li>
      <%}%>
      <%if(hasPrevPage && prevPage!=1){%>
      <li class="waves-effect active amber darken-3 white-text"><a href="/home/leaderboard?page=<%=prevPage%>"><%=prevPage%></a></li>
      <%}%>

      <li class="waves-effect active amber darken-3 white-text"><a href="/home/leaderboard?page=<%=currentPage%>"><%=currentPage%></a></li>

      <%if(hasNextPage){%>
      <li class="waves-effect active amber darken-3 white-text"><a href="/home/leaderboard?page=<%=currentPage+1%>"><i class="material-icons">chevron_right</i></a></li>
      <%}%>
    </ul>
</div>